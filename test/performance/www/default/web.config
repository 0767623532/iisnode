<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <iisnode 
      loggingEnabled="false" 
      debuggingEnabled="false" 
      devErrorsEnabled="false"
      maxProcessCountPerApplication="1" 
      maxConcurrentRequestsPerProcess="999999"
    />
  </system.webServer>
</configuration>
